<UserControl x:Class="FriendExtension.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
             mc:Ignorable="d"
             xmlns:prism="http://www.codeplex.com/CompositeWPF"
             xmlns:infra="clr-namespace:Friend.Infra;assembly=Friend.Infra"
             d:DesignHeight="586.3" d:DesignWidth="321.2"
             Name="MyToolWindow" 
             >
    <DockPanel LastChildFill="True">
        <StackPanel  Orientation="Horizontal"
            DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static infra:RegionNames.ToolbarRegion}" />
        <ContentControl prism:RegionManager.RegionName="{x:Static infra:RegionNames.ContentRegion}" />
    </DockPanel>
</UserControl>
