<UserControl x:Class="FriendExtension.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="586.3" d:DesignWidth="321.2"
             Name="MyToolWindow" 
             >
    <UserControl.Resources>
        <Storyboard x:Key="ReportConfigNextAnimation">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="grdReportCriteria">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0.005"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="grdReportCriteria">
                    <EasingDoubleKeyFrame KeyTime="0" Value="775"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="ReportConfigBackAnimation">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="grdReportDefinition">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0.059"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.009"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="grdReportDefinition">
                    <EasingDoubleKeyFrame KeyTime="0" Value="-160.5"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.5"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Style x:Key="ButtonFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle StrokeDashArray="1 2" StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="ButtonNormalBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#EBEBEB" Offset="0.5"/>
            <GradientStop Color="#DDDDDD" Offset="0.5"/>
            <GradientStop Color="#CDCDCD" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF707070"/>
        <Style x:Key="ButtonDeleteStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource ButtonFocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource ButtonNormalBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Themes:ButtonChrome x:Name="Chrome" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" RenderMouseOver="{TemplateBinding IsMouseOver}" RenderPressed="{TemplateBinding IsPressed}" RenderDefaulted="{TemplateBinding IsDefaulted}" SnapsToDevicePixels="true" Height="20" HorizontalAlignment="Left" Width="20">
                            <Canvas Margin="0.117,0,-0.117,0">
                                <Path Data="M4.5809614,4.0202176 C1.1299312,2.7541545 3.6845709,1.9635692 4.6072176,2.5852612 6.0802508,3.5778114 6.3741496,3.7049448 8.6992488,6.9373759 8.9862307,7.3363477 9.2731438,8.1972154 8.4140158,7.1466231 6.1606355,4.3910571 4.5809614,4.0202176 4.5809614,4.0202176 z" Margin="0" Stretch="Fill" Stroke="#FFE80C0C" StrokeThickness="0.1" Fill="#FFF11111" HorizontalAlignment="Stretch" Canvas.Left="0.282" Width="13.318" Height="12.834" Canvas.Top="0.544"/>
                                <Path Data="M4.4982239,4.1001874 C3.0425894,3.4963918 3.7257898,1.8786467 4.7590252,2.2912025 6.7774428,3.0971271 6.7962656,2.7598822 9.5022685,6.9743107 9.5022685,6.9743107 12.490872,12.869446 9.2005064,7.4749808 6.8793918,3.6695762 4.4982239,4.1001874 4.4982239,4.1001874 z" Margin="0" Stretch="Fill" Stroke="#FFE80C0C" StrokeThickness="0.1" Fill="#FFF11111" HorizontalAlignment="Stretch" Width="14.404" RenderTransformOrigin="0.5,0.5" Height="15.286" Canvas.Left="0.979" Canvas.Top="0.26">
                                    <Path.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-90"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Path.RenderTransform>
                                </Path>
                            </Canvas>
                        </Themes:ButtonChrome>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="RenderDefaulted" TargetName="Chrome" Value="true"/>
                            </Trigger>
                            <Trigger Property="ToggleButton.IsChecked" Value="true">
                                <Setter Property="RenderPressed" TargetName="Chrome" Value="true"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
