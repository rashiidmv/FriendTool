                    </Grid>
                    <Grid  Name="grdReportCriteria" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="46"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="169.6" />
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" CanUserAddRows="false" x:Name="dataGridCriteriaObjects" 
                  CanUserResizeRows="False"
                  AutoGenerateColumns="False"
                  ItemsSource ="{Binding CriteriaObjects}" Margin="4,1.6,5.6,5.4" Grid.ColumnSpan="2">
                            <DataGrid.Resources>
                                <Style x:Key="DataGridBase" TargetType="Control">
                                    <Setter Property="LayoutTransform">
                                        <Setter.Value>
                                            <TransformGroup>
                                                <RotateTransform Angle="-90" />
                                                <ScaleTransform ScaleX="1" ScaleY="-1" />
                                            </TransformGroup>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
                                </Style >
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource DataGridBase}"/>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridBase}"/>
                                <Style TargetType="DataGridRowHeader" BasedOn="{StaticResource DataGridBase}"/>
                            </DataGrid.Resources>
                            <DataGrid.LayoutTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="90" />
                                    <MatrixTransform Matrix="-1, 0, 0, 1, 0, 0" />
                                </TransformGroup>
                            </DataGrid.LayoutTransform>
                            <DataGrid.Columns >
                                <DataGridTemplateColumn CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{DynamicResource ButtonDeleteStyle}" Width="20" Height="20" FontWeight="Bold" Name="btnDelete" Click="btnDelete_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn CanUserResize="False" Header="Id" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Id,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn CanUserResize="False" Header="Display Name" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Width="80" Text="{Binding DisplayName,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridCheckBoxColumn CanUserResize="False" Header="Bold -- [b]...[/b]" Binding="{Binding BoldSentence,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ></DataGridCheckBoxColumn>
                                <DataGridCheckBoxColumn CanUserResize="False" Header="Next Line -- [br]" Binding="{Binding NextLine,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></DataGridCheckBoxColumn>
                                <DataGridCheckBoxColumn CanUserResize="False" Header="Allow Nullable" Binding="{Binding Nulllable,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></DataGridCheckBoxColumn>
                                <DataGridTemplateColumn CanUserResize="False" Header="Display Style">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="80" ItemsSource="{Binding Path=DispStyles,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding SelectedDisplayStyle, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn CanUserResize="False" Header="Parameter Name">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding ParameterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn CanUserResize="False" Header="Width" Binding="{Binding Width,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Text="Criteria &amp; Controls" Grid.Row="0" Grid.Column="0"  Margin="10,10,9.6,1"  FontSize="16" FontWeight="Bold" />
                        <TextBlock Text="Criteria Name" Grid.Row="1" Grid.Column="0" Margin="10,4,16.6,13.4"/>
                        <TextBox Name="txtCriteriaName" Margin="11.4,4.2,5.6,0" Grid.Row="1" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBlock FontWeight="Bold" Text="Criteria UI Definition" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,142,110.2" Grid.RowSpan="2" Height="18" VerticalAlignment="Bottom"   />
                        <Button Grid.Row="2" Grid.Column="1"  Name="btnAdd" Click="btnAdd_Click" Content="Add Criteria Objects" HorizontalAlignment="Left" Width="123" Margin="11.4,0,0,0" Height="28" VerticalAlignment="Top" />
                        <StackPanel  Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0.4,10.4,-0.4,-10">
                            <Button  Name="btnBackReportDefinition" Content="Back" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="0,0,10,0" Click="btnBackReportDefinition_Click" />
                            <Button  Name="btnCreateReportConfig" Content="Create Report Config" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="123" Click="btnCreateReportConfig_Click" />
                        </StackPanel>
                    </Grid>
                    <Button x:Name="button" Content="Button" Width="75"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

