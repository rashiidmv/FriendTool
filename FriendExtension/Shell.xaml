                            <TextBlock Margin="0,8,0,0" Text="Assembly Name" FontStyle="Italic" FontSize="10"/>
                            <TextBox Name="txtAssemblyName"    Height="21" />
                        </StackPanel>

                        <TextBox Name="txtBusinessDomain" Grid.Row="3" Margin="11.4,4.8,15.6,0" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox Name="txtReportEntity" Grid.Row="4" Margin="11.4,4.6,15.6,0" Height="20" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox Name="txtDataBaseConnectionName" Grid.Row="5" Margin="11.4,4.4,15.6,0" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox Name="txtIncludeInToolsList" Grid.Row="6" Margin="11.4,5.2,15.6,0" Height="20" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox Name="txtModuleId" Grid.Row="7" Margin="11.4,5,15.6,0" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox Name="txtSortOrder" Grid.Row="8" Margin="11.4,4.8,15.6,0" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox Name="txtExternalCriteriaName" Grid.Row="9" Margin="11.4,4.8,15.6,0" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
