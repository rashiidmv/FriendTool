                        <TextBlock Text="Class" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="18,5,8.6,13.2"/>
                        <TextBlock Text="Business Domain	" Grid.Row="3" Grid.Column="0" Margin="18,5.8,8.6,13.4"/>
                        <TextBlock Text="Report Entity" Grid.Row="4" Grid.Column="0" Margin="18,4.6,8.6,14.6"/>
                        <TextBlock Text="DataBase Connection Name" Grid.Row="5" Grid.Column="0" Margin="18,4,0.6,14"/>
                        <TextBlock Text="Include In Tools List" Grid.Row="6" Grid.Column="0" Margin="18,5.2,8.6,14"/>
                        <TextBlock Text="Module Id" Grid.Row="7" Grid.Column="0" Margin="18,6,9.6,13.2"/>
                        <TextBlock Text="Sort Order" Grid.Row="8" Grid.Column="0" Margin="18,4.8,9.6,13.4"/>
                        <TextBlock Text="External Criteria Name" Grid.Row="9" Grid.Column="0" Margin="18,4.8,9.6,13.4"/>
                        <StackPanel  Margin="45.4,9.6,0,0" Orientation="Horizontal"  Grid.Column="1" Grid.Row="13">
                            <Button Content="Next"  Click="btnReportDefinitionNext_Click" Name="btnReportDefinitionNext" HorizontalAlignment="Left" Width="63" Height="24" VerticalAlignment="Top"/>
                            <!--<Button  Name="btnRead" Click="btnRead_Click" Content="Read File" HorizontalAlignment="Left"  Width="63" Height="24" VerticalAlignment="Top" />-->
                        </StackPanel>
                        <TextBox Name="txtReportName" Margin="11.4,4.2,15.6,0" Grid.Row="1" Height="21" VerticalAlignment="Top" Grid.Column="1"/>
